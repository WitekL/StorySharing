<html>
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  </head>

  <body>
    <div class="topnav">
      <ul id="site-nav">
        <li><%= link_to "Main", home_index_url %></li>
        <li><%= link_to "Articles", articles_url %></li>
        <li>Gallery</li>
      </ul>

      <ul id="account-nav">
      <% if logged_in? %>
        <li><div id="dropButton">Profile

          </div>


        </li>
      <% else %>
        <li><%= link_to "Sign in", sessions_new_url %></li>
      <% end %>
      </ul>
    </div>

    <div id="dropArea">
      <ul>
        <li>test</li>
        <li><%= link_to "Sign out", sessions_logout_url, method: :delete %></li>
      </ul>
    </div>


    <h2><%= @article.title %></h2>
    <h5><%= User.find_by(id: @article.user_id).name %> </h5>
    <div id="article_viewed"><%= raw @article.content %></div>

    <script>
    $("#dropButton").click(function() {
        $("#dropArea").toggle()
      });
    </script>

    </body>
</html>
