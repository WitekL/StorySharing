<html>
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1"></meta>
  </head>

  <body>
    <%= render 'shared/navigation' %>
      <div class="container">
        <div class="row">
          <div class="panel-heading">
  	        <div class="panel-title text-center">
  	          <h1 class="title">Sign up!</h1>
  	        </div>
  	      </div>
        </div>
        <div class="row">
          <div class="col-xs-3"></div>
          <div class="col-xs-6">

            <% if @user.errors.any? %>
              <div class="alert alert-danger" role="alert" id="error_msg">
                  <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
              </div>
            <% end %>

            <%= simple_form_for @user do |f| %>
            <div class="form-group">
              <label for="exampleInputName">Username</label>
              <%= f.input :name, label: false, input_html: { class: "form-control" } %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail">Email address</label>
              <%= f.input :email, label: false, error: false, input_html: { class: "form-control", "data-tooltip" => true, title: "user@example.com" }  %>
            </div>
            <div class="form-group">
          		<label for="exampleInputPassword1">Password</label>
              <%= f.input :password, label: false, error: false, input_html: { class: "form-control", "data-tooltip" => true, title: "At least 6 characters long" } %>
            </div>
            <div class="form-group">
          		<label for="exampleInputPassword1">Re-enter password</label>
              <%= f.input :password_confirmation, label: false, error: false, input_html: { class: "form-control" } %>
            </div>
              <%= f.button :submit, class: "btn btn-primary btn-block" %>
            <% end %>


          </div>
          <div class="col-xs-3"></div>
        </div>
      </div>

  </body>

</html>
