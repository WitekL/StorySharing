<html>
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  </head>

  <body>
    <%= render 'shared/navigation' %>

    <div class="container">
      <div class="row">
        <div class="panel-heading">
	        <div class="panel-title text-center">
	          <h1 class="title">Sign in</h1>
	        </div>
	      </div>
      </div>
      <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">

          <% if flash[:danger].present? %>
          <div class="alert alert-danger" role="alert" id="error">
             <%= flash[:danger] %>
          </div>
          <% end %>


          	<%= simple_form_for :session, url: sessions_login_url do |f| %>
          	<div class="form-group">
          		<label for="exampleInputEmail1">Email address</label>
          		<%= f.input :email, label: false, input_html: { class: "form-control"} %>
          	</div>
          	<div class="form-group">
          		<label for="exampleInputPassword1">Password</label>
          		<%= f.input :password, label: false, input_html: { class: "form-control"}  %>
          	</div>

          	<%= f.submit "Sign In", class: "btn btn-primary btn-block" %>
          	<% end %>


          <!-- <%= simple_form_for :session, url: sessions_login_url do |f| %>
            <%= f.input :email, label: false, placeholder: "E-mail address", input_html: { class: "form-control"} %>
            <%= f.input :password, label: false, placeholder: "Password", input_html: { class: "form-control"}  %>
            <%= f.submit "Sign In", class: "btn btn-lg btn-primary btn-block" %>
          <% end %> -->

        <p class="text-center"><%= link_to "No account yet? Sign up now!", new_user_path %>  </p>
        </div>
        <div class="col-xs-3"></div>
      </div>
    </div>
  </body>
</head>
