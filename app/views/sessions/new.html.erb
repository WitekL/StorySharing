<html>
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  </head>

  <body>
    <%= render 'shared/navigation' %>

    <div class="container">
      <div class="row">
        <div class="panel-heading">
	               <div class="panel-title text-center">
	               		<h1 class="title">Sign in</h1>
	               		<hr />
	               	</div>
	            </div>
      </div>
      <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
          <div class="alert alert-danger" role="alert" id="error"> <%= flash[:danger] unless flash[:danger].blank? %> </div>

          <%= simple_form_for :session, url: sessions_login_url do |f| %>
            <%= f.input :email, label: false, placeholder: "E-mail address", input_html: { class: "form-control"} %>
            <%= f.input :password, label: false, placeholder: "Password", input_html: { class: "form-control"}  %>
            <%= f.submit "Sign In", class: "btn btn-lg btn-primary btn-block" %>
          <% end %>

        <h4><%= link_to "No account yet? Sign up now!", new_user_path %>  </h4>
        </div>
        <div class="col-xs-3"></div>
      </div>
    </div>
  </body>
</head>
